# Estrutura de repetição: loop for
for i in range(1, 6):
    print(f"Número: {i}")

# Estrutura de tomada de decisão: if
numero = int(input("Digite um número: "))

if numero % 2 == 0:
    print(f"O número {numero} é par.")
else:
    print(f"O número {numero} é ímpar.")

# Programa completo
for i in range(5):  # Estrutura de repetição
    numero = int(input("Digite um número: "))
    
    if numero % 2 == 0:  # Estrutura de tomada de decisão
        print(f"O número {numero} é par.")
    else:
        print(f"O número {numero} é ímpar.")
